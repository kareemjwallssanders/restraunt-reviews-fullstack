<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Restaurant Reviews</title>
  <link href="/css/profile.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
    integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>

  <header class="proHeader">
    <h1>Restaurant Reviews</h1>
    <h3 class="promainH3">Upload a pic of you favorite food & write a review</h3>
  </header>

  <section class="usersBox">
    <section class="avatar">
      <span><%= user.local.name %></span>
      <img src="<%= user.local.avatar %>" alt="item-picture">
      <div class="form-group">
        <input id="avatar" type="file" name="avatar">
        <input id="userId" hidden type="text" name="_id" value="<%= user._id %>">
      </div>
      <input id="avatarSubmit" type="submit">
      </form>
    </section>
    <span>User Pic</span>

  </section>

  <% if(reviews.length > 0) { %>
  <section class="reviews">

    <h3>Pictures & Reviews</h3>
    <ul>
      <% for(var i = 0; i<reviews.length; i++){ %>
      <li id="<%= reviews[i]._id %>">
        <span><%= reviews[i].username %></span>
        <p><%= reviews[i].review %></p>
        <% for(var k = 0; k<reviews[i].images.length; k++){ %>
        <img src="<%= reviews[i].images[k] %>" alt="item-picture" />
        <% } %>
        <span><i class="fas fa-trash"></i></span>
      </li>
      <% } %>
    </ul>
  </section>
  <% } %>

  <section class = "bottomSec">
  <form action="/api/reviews" method="post" enctype="multipart/form-data">
    <input hidden type="text" name="username" value="<%= user.local.name %>">
    <input id="message" type="text" name="review" placeholder="Your Review Here">
    <input multiple type="file" name="images">
    <button type="submit" name="button">Submit</button>
  </form>
</section>

  <script src="/js/main.js"></script>
</body>

</html>